<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yibao.biggirl">

    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGEad" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.yibao.music.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="@null"
        android:icon="@mipmap/biggirl"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.yibao.music.splash.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.Splash.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.yibao.music.service.AudioPlayService" />

        <service android:name="com.yibao.music.service.BigServices" />
        <service android:name="com.yibao.music.service.MusicService" />

        <activity
            android:name="com.yibao.music.music.musiclist.MusicListActivity"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>