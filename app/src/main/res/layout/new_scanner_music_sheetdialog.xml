<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_list_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/time_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/time_picker_widget_header">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/new_music_list"
            android:textStyle="bold"
            android:textColor="@color/lyricsNormal"
            android:textSize="@dimen/bigLyrics" />

        <TextView
            android:id="@+id/tv_new_music_close"
            android:layout_width="58dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:background="@drawable/shape_btn_selector"
            android:gravity="center"
            android:text="@string/close"
            android:textColor="@color/lyricsNormal"
            android:textSize="@dimen/bigLyrics" />
    </RelativeLayout>




</LinearLayout>